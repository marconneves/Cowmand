{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "dist/**/*",
    "example/**/*"
  ]
}
